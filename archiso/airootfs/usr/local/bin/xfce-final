#!/bin/bash
echo "Copy /etc/skel to /root"
echo "#################################"
cp -aT /etc/skel/ /root/

echo "Setting Mozilla Firefox touchscreen scrolling"
echo "#################################"
echo "MOZ_USE_XINPUT2 DEFAULT=1" >> /etc/security/pam_env.conf

echo "Change Cursor Globally "
echo "#################################"
sed -i "s/Inherits=Adwaita/Inherits=Catppuccin-Pink-Cursors/g" /usr/share/icons/default/index.theme

